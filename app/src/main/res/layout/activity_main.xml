<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_main_background"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.adam.allinthefamily.MainActivity">

    <ImageView
        android:id="@+id/game_logo"
        android:layout_width="@dimen/game_logo_width"
        android:layout_height="@dimen/game_logo_height"
        android:layout_centerHorizontal="true"
        android:contentDescription="@null"
        android:src="@drawable/ic_game_logo" />

    <EditText
        android:id="@+id/name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/game_logo"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/name_entrance_margin_top"
        android:autofillHints="@null"
        android:background="@drawable/name_entrance_view_background"
        android:hint="@string/name_submission_hint"
        android:inputType="textCapWords"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:textColorHint="@color/name_entrance_hint_text"
        android:textSize="@dimen/name_entrance_text_size"
        tools:targetApi="o" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_edit_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/submit_button_margin"
        android:layout_marginBottom="@dimen/submit_button_margin"
        android:background="@drawable/button_selector"
        android:elevation="10dp"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:text="@string/submit_button_text"
        android:textColor="@color/button_text"
        android:textSize="@dimen/button_text_size"
        tools:targetApi="lollipop"
        tools:text="SUBMIT" />

    <Button
        android:id="@+id/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/submit_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/play_button_margin"
        android:background="@drawable/button_selector"
        android:elevation="10dp"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:text="@string/start_game_button_text"
        android:textColor="@color/button_text"
        android:textSize="@dimen/button_text_size"
        tools:targetApi="lollipop"
        tools:text="START THE GAME" />

</RelativeLayout>
